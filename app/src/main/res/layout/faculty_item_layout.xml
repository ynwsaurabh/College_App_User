<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/text_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/facultyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saurabh Prajapati"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/title_size"
                    android:fontFamily="@font/latobold"/>


                <TextView
                    android:id="@+id/facultyPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Principle"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/title_size"
                    android:fontFamily="@font/latoregular" />


                <TextView
                    android:id="@+id/facultyEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="prajapatisaurabh02604@gmail.com"
                    android:textColor="@color/textColor"
                    android:textSize="15sp"
                    android:fontFamily="@font/latolight"/>


            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/facultyImage"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginVertical="0dp"
                android:layout_weight="0.5"
                android:src="@drawable/avatar" />


        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>